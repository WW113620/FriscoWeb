        $("#PmdId").val(pmdid);
        var _pid = $("#PmdId").val();

        var PMDID = pmdid;

        $.post("/Report/GetWeeklyCountTime", { id: PMDID, startDate: $("#startDate").val(), endDate: $("#endDate").val() }, function (result) {
