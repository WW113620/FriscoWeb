<script>
    function reloadData() {
        var _xval = $("#XValue").val();
        var _yval = $("#YValue").val();
        var _did = $("#PId").val();
        var _pid = $("#PmdId").val();
        initSession();
        initialize(_xval, _yval, _did, _pid);
    }
    function initialize(x, y, dev, pmdid) {
