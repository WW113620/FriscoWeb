<style>
    .layui-form-label {
        width: 100px;
        padding: 9px 5px;
    }

    .layui-form-item .layui-input-inline {
        width: 140px;
    }
</style>

<div id="mainContent" class="layui-form ScheduledOperation">
    <br />
    <div class="layui-form-item" style="padding-top: 20px">
        <div class="layui-inline">
            <label class="layui-form-label" style="width: auto">Operation Name</label>
            <div class="layui-input-inline">
                <input type="text" name="text-line-name" class="form-control" />
            </div>
        </div>
        <div class="layui-inline">
            <div style="float: right">
                <input class="btn btn-default factory-btn" type="button" value="School Calendar" onclick="openCalendar()" />
            </div>
            <div class="checkbox checkbox-group" style="float: right;padding-right:30px;padding-top:4px">
                <label>
                    <input type="checkbox" name="week" value="SchoolCalendarEnable" class="fancy" style="opacity: 0;">Enable School Calendar
                </label>
            </div>
        </div>
    </div>

    <div class="layui-row">
        <fieldset class="layui-elem-field layui-field-title">
            <legend>Date Time Option</legend>
        </fieldset>

        <div class="layui-col-md6">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">Start Date</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" id="StartDate" readonly="readonly">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">Start Time</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" id="StartTime" readonly="readonly">
                    </div>
                </div>

            </div>
        </div>
        <div class="layui-col-md6">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">Stop Date</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" id="StopDate" readonly="readonly">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">Stop Time</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" id="StopTime" readonly="readonly">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-row">
        <fieldset class="layui-elem-field layui-field-title">
            <legend>Recurrence</legend>
        </fieldset>

        <div class="layui-col-md12">
            <div class="layui-form-item">
                <div class="left">
                    <div class="layui-inline">
                        <div class="checkbox">
                            <div style="margin-right: 30px;">
                                <label>
                                    <input type="radio" name="dailyName" value="daily" class="fancy" style="opacity: 0;">Daily</label>
                            </div>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="checkbox">
                            <div style="margin-right: 30px;">
                                <label>
                                    <input type="radio" name="dailyName" value="days" class="fancy" style="opacity: 0;">Selected Days</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="layui-block">
                    <div class="layui-inline" style="margin-right: 30px;">
                        <div class="checkbox checkbox-group">
                            <label>
                                <input type="checkbox" name="week" value="monday" class="fancy" style="opacity: 0;">Monday
                            </label>
                        </div>
                    </div>

                    <div class="layui-inline" style="margin-right: 30px;">
                        <div class="checkbox checkbox-group">
                            <label>
                                <input type="checkbox" name="week" value="tuesday" class="fancy" style="opacity: 0;">Tuesday
                            </label>
                        </div>
                    </div>
                </div>

                <div class="layui-block">
                    <div class="layui-inline">
                        <div class="checkbox checkbox-group">
                            <label>
                                <input type="checkbox" name="week" value="wednesday" class="fancy" style="opacity: 0;">Wednesday
                            </label>
                        </div>
                    </div>
                    <div class="layui-inline" style="margin-right: 30px;">
                        <div class="checkbox checkbox-group">
                            <label>
                                <input type="checkbox" name="week" value="thursday" class="fancy" style="opacity: 0;">Thursday
                            </label>
                        </div>
                    </div>
                </div>
                <div class="layui-block">
                    <div class="layui-inline" style="margin-right: 30px;">
                        <div class="checkbox checkbox-group">
                            <label>
                                <input type="checkbox" name="week" value="friday" class="fancy" style="opacity: 0;">Friday
                            </label>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="checkbox checkbox-group">
                            <label>
                                <input type="checkbox" name="week" value="saturday" class="fancy" style="opacity: 0;">Saturday
                            </label>
                        </div>
                    </div>
                </div>
                <div class="layui-block">
                    <div class="layui-inline">
                        <div class="checkbox checkbox-group">
                            <label>
                                <input type="checkbox" name="week" value="sunday" class="fancy" style="opacity: 0;">Sunday
                            </label>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="checkbox checkbox-group">
                            <label>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="layui-row">
        <hr style="width: 97%;">

        <div class="layui-col-md4">
