                    </select>
                </div>
            </div>
        </div>
        <div class="layui-col-md4">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <div class="layui-input-inline">
                        <select class="form-control">
                            <option>Step 1</option>
                            <option>Step 2</option>
                            <option>Step 3</option>
                            <option>Step 4</option>
                        </select>
                        <div class="select-button"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="layui-col-md4">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">Text</label>
                    <div class="layui-input-inline">
                        <select class="form-control">
                            <option>None</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                        <div class="select-button"></div>
                    </div>
                </div>

                <div class="layui-inline">
                    <label class="layui-form-label">Graphics</label>
                    <div class="layui-input-inline">
                        <select class="form-control">
                            <option>Options</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                        <div class="select-button"></div>
                    </div>
                </div>

                <div class="layui-inline">
                    <label class="layui-form-label">Animations</label>
                    <div class="layui-input-inline">
                        <select class="form-control">
                            <option>Options</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                        <div class="select-button"></div>
                    </div>
                </div>

            </div>
        </div>
        <div class="layui-col-md12">
            <table id="about-table-deviceinfo" class="table text-center">
                <thead>
                    <tr class="header-background">
                        <th>Operation Name</th>
                        <th>Date Period</th>
                        <th>Time Period</th>
                        <th>Recurrence</th>
                        <th>Operation Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Operation Name</td>
                        <td>Date Period</td>
                        <td>Time Period</td>
                        <td>Recurrence</td>
                        <td>Operation Description</td>
                    </tr>
                    <tr class="widget-tr-backgroud">
                        <td>Operation Name</td>
                        <td>Date Period</td>
                        <td>Time Period</td>
                        <td>Recurrence</td>
                        <td>Operation Description</td>
                    </tr>
                    <tr>
                        <td>Operation Name</td>
                        <td>Date Period</td>
                        <td>Time Period</td>
                        <td>Recurrence</td>
                        <td>Operation Description</td>
                    </tr>
                    <tr class="widget-tr-backgroud">
                        <td>Operation Name</td>
                        <td>Date Period</td>
                        <td>Time Period</td>
                        <td>Recurrence</td>
                        <td>Operation Description</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div style="text-align: center; margin: 20px auto;">
        <button class="button">Save</button>
        <button class="button">Clear</button>
    </div>

</div>

@section scripts{
    <script>
        initSideBar();

        function initSideBar() {
            layui.use('element', function () {
                var element = layui.element;
            });
        }
        $("#sidebar .dropdown").click(function () {
            if ($(this).hasClass("active")) {
                $(this).removeClass("active").addClass("open");
            } else {
                $(this).removeClass("open").addClass("active");
            }
        })

        function ShowMenu(id) {
            if (id == 0) {
                $("#Quickid").hide();
                $("#Quickidmore").show();
                $("#Quickidmore").find("ul.layui-tab-title li").removeClass("layui-this");
                $("#Quickidmore").find("ul.layui-tab-title li").eq(0).addClass("layui-this");
                $("#Quickidmore").find("div.layui-tab-content .layui-tab-item").removeClass("layui-show");
                $("#Quickidmore").find("div.layui-tab-content .layui-tab-item").eq(0).addClass("layui-show");
            } else {
                $("#Quickid").show();
                $("#Quickidmore").hide();
                $("#Quickid").find("ul.layui-tab-title li").removeClass("layui-this");
                $("#Quickid").find("ul.layui-tab-title li").eq(0).addClass("layui-this");
                $("#Quickid").find("div.layui-tab-content .layui-tab-item").removeClass("layui-show");
                $("#Quickid").find("div.layui-tab-content .layui-tab-item").eq(0).addClass("layui-show");
            }
            initSideBar();
        }

        initBase()

        function initBase() {
            $(".fancy").uniform();
        }

        function openCalendar() {

            var width = window.innerWidth / 5;
            var height = window.innerHeight / 8;
            window.open("@Url.Action("index","Calendar")", "newwindow", "height=800, width=1200,top=" + height + ",left=" + width+",toolbar=no,menubar=no, scrollbars=no, resizable=no, location=no, status=no");
        }

        // bind time input
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            // Execute a new instance of laydate
            laydate.render({
                elem: '#StartTime',
                type: 'time',
                lang: 'en',
                theme: '#eb634d' //Specified element
            });
        });

        // bind date input
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            // Execute a new instance of laydate
            laydate.render({
                elem: '#StartDate',
                lang: 'en',
                theme: '#eb634d' //Specified element
            });
        });
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            // Execute a new instance of laydate
            laydate.render({
                elem: '#StopTime',
                type: 'time',
                lang: 'en',
                theme: '#eb634d' //Specified element
            });
        });

        // bind date input
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            // Execute a new instance of laydate
            laydate.render({
                elem: '#StopDate',
                lang: 'en',
                theme: '#eb634d' //Specified element
            });
        });
    </script>
}
