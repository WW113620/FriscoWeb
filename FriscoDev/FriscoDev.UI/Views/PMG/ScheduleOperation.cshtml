@{
    ViewBag.Title = "ScheduleOperation";
}

@section crumbs{

    <div>
        <span onclick="HomePage()" style="cursor: pointer;">Home</span>
        <span>/</span>
        <span>Device Mananger</span>
        <span>/</span>
        <span>SetUp</span>
