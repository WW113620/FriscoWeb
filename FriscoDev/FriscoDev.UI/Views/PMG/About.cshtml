</div>

@section scripts{

    <script>
        initSideBar();

        function initSideBar() {
            layui.use('element', function () {
                var element = layui.element;
            });
        }
        $("#sidebar .dropdown").click(function () {
            if ($(this).hasClass("active")) {
                $(this).removeClass("active").addClass("open");
            } else {
                $(this).removeClass("open").addClass("active");
            }
        })

        function ShowMenu(id) {
            if (id == 0) {
                $("#Quickid").hide();
                $("#Quickidmore").show();
                $("#Quickidmore").find("ul.layui-tab-title li").removeClass("layui-this");
                $("#Quickidmore").find("ul.layui-tab-title li").eq(0).addClass("layui-this");
                $("#Quickidmore").find("div.layui-tab-content .layui-tab-item").removeClass("layui-show");
                $("#Quickidmore").find("div.layui-tab-content .layui-tab-item").eq(0).addClass("layui-show");
            } else {
                $("#Quickid").show();
                $("#Quickidmore").hide();
                $("#Quickid").find("ul.layui-tab-title li").removeClass("layui-this");
                $("#Quickid").find("ul.layui-tab-title li").eq(0).addClass("layui-this");
                $("#Quickid").find("div.layui-tab-content .layui-tab-item").removeClass("layui-show");
                $("#Quickid").find("div.layui-tab-content .layui-tab-item").eq(0).addClass("layui-show");
            }
            initSideBar();
        }

        initBase()

        function initBase() {
            $(".fancy").uniform();
        }

        // bind time input
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            // Execute a new laydate instance.
            laydate.render({
                elem: '#timeInput',
                type: 'time',
                lang: 'en',
                theme: '#eb634d' // Specified element
            });
            timeLaydate = laydate
        });

        // bind date input
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            // Execute a new laydate instance.
            laydate.render({
                elem: '#dateInput',
                lang: 'en',
                theme: '#eb634d' // Specified element
            });
            dateLaydate = laydate
        });

        // global
        var timeLaydate, dateLaydate;

        // send local time
        $("#sendLocalTime").on("click", function () {
            var now = new Date().getTime()
            timeLaydate.render({
                elem: '#timeInput',
                value: new Date().getHours() + ":" + new Date().getMinutes() + ":" + new Date().getSeconds()
            })

            dateLaydate.render({
                elem: '#dateInput',
                value: new Date(now)
            })
        })

        function Factory()
        {
            var load = layer.load();
            $.post('@Url.Content("~/PMG/FactoryReset")', { "sid": 1 }, function (res) {
                layer.close(load)
                alert("send message")
                return false;
            }, 'json');
        }
    </script>

}