@section scripts{
    <script src="~/Scripts/plupload/plupload.full.min.js"></script>
    <script>
        var app = new Vue({
            el: '#vue_app',
            data: {
                Id: 0,
                Default_Location: "",
                SiteName: "",
                TimeZone: "",
                Organization: "",
                City: "",
                State: "",
                CountryName: "",
                ProfileImgUrl: "",
                TimeZoneOptions: []
            },
            // For data initialization
            created: function () {
                var load = layer.load(2);
                axios.post('/User/GetTimeZoneList')
                    .then(function (data) {
                        layer.close(load);
                        app.TimeZoneOptions = JSON.parse(data.data.data);
                    })
                    .catch(function (data) {
                        layer.close(load);
                    });
                axios.post('GetSiteConfig')
                    .then(function (data) {
                        layer.close(load);
                        var site = data.data.data;
                        app.Id = site.Id;
                        if (site.Default_Location == null || site.Default_Location === "") {
                            app.Default_Location = '( 32.968182, -96.716446 )';
                        } else {
                            app.Default_Location = site.Default_Location;
                        }
                        app.SiteName = site.SiteName;
                        if (site.TimeZone == null || site.TimeZone === "") {
                            app.TimeZone = 'Dateline Standard Time';
                        } else {
                            app.TimeZone = site.TimeZone;
                        }
                        if (site.Organization == null || site.Organization === "") {
                            app.Organization = 'Applied concepts';
                        } else {
                            app.Organization = site.Organization;
                        }
                        app.City = site.City;
                        app.State = site.State;
                        if (site.CountryName == null) {
                            app.CountryName = 840;
                        } else {
                            app.CountryName = site.CountryName;
                        }
                        if (site.ProfileImgUrl == null || site.ProfileImgUrl === "") {
                            app.ProfileImgUrl = '/Images/logo.png';
                        } else {
                            app.ProfileImgUrl = site.ProfileImgUrl;
                        }
                    })
                    .catch(function (data) {
                        layer.close(load);
                    });
            },
            methods: {
                save: function () {
                    var load = layer.load(2);
                    axios.post('Save',
                        {
                            Id: app.Id,
                            Default_Location: app.Default_Location,
                            SiteName: app.SiteName,
                            TimeZone: app.TimeZone,
                            Organization: app.Organization,
                            City: app.City,
                            State: app.State,
                            CountryName: app.CountryName,
                            ProfileImgUrl: app.ProfileImgUrl
                        })
                        .then(function (response) {
                            layer.close(load);
                            if (response.data.success) {
                                layer.msg('success', { icon: 1, time: 1500 }, function () { location.reload(); });
                            } else {
                                layer.msg('error', { icon: 2, time: 1500 }, function () { });
                            }
                        })
                        .catch(function (data) {
                            layer.close(load);
                            layer.msg('error', { icon: 2, time: 1500 }, function () { });
                        });
                }
            }
        });
    </script>
    <script>
        var fileUploadUrl = "@Url.Content("~/Upload/UploadImage")";
        var flash_url = "@Url.Content("~/js/plupload/Moxie.swf")";
        var browseId = "addFileContent";
        var uploader_file = new plupload.Uploader({// Create an instance constructor
            runtimes: 'gears,html5,html4,flash', // Upload plugin initialization selects the priority order of that way
            browse_button: browseId, // upload button
            url: fileUploadUrl, // remote url
            flash_swf_url: flash_url,
            filters: {
                max_file_size: '10mb', // Maximum upload file size (size 100b, 10kb, 10mb, 1gb）
                mime_types: [//enbale upload file type
                    { title: "pictures", extensions: "gif,jpg,jpeg,png" }//xls,xlsx,
                ]
            },
            multi_selection: false,
            init: {
                FilesAdded: function (up, files) { //before upload file 
                    uploader_file.start();
                },
                UploadProgress: function (up, file) { //Uploading, showing progress bar
                },
                FileUploaded: function (up, file, info) { //when the file upload is successful
                    var data = eval("(" + info.response + ")");//json data
                    if (data.errorCode == 200) {
                        $("#ProfileImgUrl").val(data.errorStr);
                        @*var imgUrl = "@Url.Content("~/Upload/Images/")" + data.errorStr;
                        $("#preview_img").attr("src", imgUrl);*@
                        app.ProfileImgUrl = '/Upload/Images/' + data.errorStr;
                    } else {
                        alert(data.errorStr);
                    }
                },
                Error: function (up, err) { //upload file exception
                    var errorCode = err.code;
                    switch (errorCode) {
                        case -600:
                            alert("More than 10m files uploaded！");
                            break;
                        case -601:
                            alert("Please upload gif,jpg,jpeg|png format files！");
                            break;
                        case -602:
                            alert("Duplicate file selection! ");
                            break;
                        default:
                            alert("Upload failed! ");
                            break;
                    }
                }
            }
        });
        uploader_file.init();
    </script>
